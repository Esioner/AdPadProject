<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="260px"
    android:layout_height="228px"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="240px"
        android:layout_height="168px">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/user_header_image" />

        <TextView
            android:layout_width="36px"
            android:layout_height="39px"
            android:background="@drawable/bg_vote_user_count"
            android:gravity="center"
            android:text="3"
            android:textColor="#fff"
            android:textSize="22dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="240px"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="王德彪"
            android:textColor="#515151"
            android:textSize="22px" />

        <com.esioner.votecenter.view.AmountChangeView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/amount_view"
            android:layout_width="112px"
            android:layout_height="50px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:btnTextSize="16px"
            app:btnWidth="45px"
            app:tvTextSize="22px"
            app:tvWidth="20px" />
    </RelativeLayout>
</LinearLayout>